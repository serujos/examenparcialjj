@model examenparcialjj.Models.Player
@{
    ViewData["Title"] = "Registrar Jugador";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Edad"></label>
        <input asp-for="Edad" type="number" class="form-control" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Posicion"></label>
        <input asp-for="Posicion" class="form-control" />
        <span asp-validation-for="Posicion" class="text-danger"></span>
    </div>
    <div class="form-group"></div>
        <label asp-for="TeamId">Equipo Actual</label>
        <select asp-for="TeamId" class="form-control"
        asp-items="@(new SelectList(ViewBag.Teams, "Id", "Nombre"))">
    <option value="">Seleccione un equipo</option>
</select>

        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>
